{
  "name": "root",
  "version": "0.0.8",
  "private": true,
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "build": "rimraf packages/*/dist && esno scripts/copy-files.ts && pnpm -r --filter !playground run build && pnpm -r run build-post",
    "dev": "nr stub",
    "lint": "eslint .",
    "lint:fix": "nr lint --fix",
    "play": "npm -C playground run dev",
    "play:build": "pnpm run build && npm -C playground run build",
    "lint:eslint": "eslint \"packages/**/*.{ts,tsx}\" --fix",
    "release": "bumpp package.json packages/*/package.json --commit --push --tag",
    "stub": "pnpm run prepack --filter ./packages -- --stub",
    "test": "vitest",
    "test:update": "vitest -u"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.20.2",
    "@types/node": "^17.0.21",
    "@vitejs/plugin-vue": "^2.3.1",
    "bumpp": "^7.1.1",
    "conventional-changelog-cli": "^2.2.2",
    "eslint": "^8.13.0",
    "esno": "^0.14.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.3",
    "unbuild": "^0.7.2",
    "unocss": "^0.31.0",
    "vite": "^2.9.1",
    "vite-plugin-inspect": "^0.4.3",
    "vite-plugin-unocss-to-uni": "workspace:*",
    "vitest": "^0.9.3",
    "vue": "^3.2.25",
    "vue-tsc": "^0.34.2"
  }
}
