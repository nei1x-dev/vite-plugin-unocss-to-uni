{
  "name": "root",
  "version": "0.0.0",
  "description": "",
  "license": "MIT",
  "author": "zguolee",
  "main": "index.js",
  "scripts": {
    "build:play": "pnpm run build --filter playground-basic",
    "dev:play": "pnpm run dev --filter playground-basic",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "pnpm run stub",
    "lint:eslint": "eslint \"packages/**/*.{ts,tsx}\" --fix",
    "log": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "release": "bumpp --commit --push --tag && pnpm publish --filter vite-plugin-unocss-to-uni",
    "stub": "pnpm run prepack --filter ./packages -- --stub",
    "test": "vitest"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/node": "^17.0.21",
    "@zguolee/eslint-config": "^0.2.7",
    "bumpp": "^7.1.1",
    "conventional-changelog-cli": "^2.2.2",
    "eslint": "^8.11.0",
    "typescript": "^4.6.2",
    "unbuild": "^0.7.0",
    "vite": "^2.8.6",
    "vite-plugin-inspect": "^0.4.3",
    "vitest": "^0.6.1"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "packages/**/*.d.ts": [
      "eslint --ext .ts"
    ],
    "packages/*/{src,types}/**/*.ts": [
      "eslint --ext .ts"
    ]
  }
}
